	<!-- 숙소상세 -->
	<select id="selectLodging" parameterType="int" resultMap="lodgingAll">
		SELECT *
		 FROM lodgingtb l, lodgingintb i, lodginginfotb f
		WHERE l.lidx = i.lidx
		  AND l.lidx = f.lidx
		  AND l.lidx = #{lidx}
	</select>
	<select id="selectRoomList" parameterType="int" resultType="roominVO">
		SELECT *
		 FROM roomtb r, roomintb i
		WHERE r.ridx = i.ridx 
		  AND r.lidx = #{lidx}
	</select>
	<select id="selectRoom" parameterType="int" resultType="roomVO">
		SELECT r.ridx
			 , r.rtype
			 , r.rnum
			 , r.rprice		
			 , l.lodgingname
			 , u.username
			 , u.userphone
			 , u.usertype
			 , u.userEmail
		 FROM roomtb r, lodgingtb l, ausertb u
		 WHERE r.lidx = l.lidx
		  AND l.uidx = u.uidx 
		  AND r.ridx = #{ridx}
	</select>
	
