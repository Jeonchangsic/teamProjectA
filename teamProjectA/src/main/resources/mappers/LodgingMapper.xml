	<!-- 숙소리스트 -->
	<select id="selectLodgingList" parameterType="HashMap" resultType="roomVO">
		SELECT *
 		  FROM lodgingtb lg, roomtb r
 		 WHERE lg.lidx = r.lidx
  		   AND ridx IN (SELECT MIN(a.ridx)
						 FROM (SELECT r.*
								 FROM lodgingtb lg, roomtb r
								WHERE lg.lidx = r.lidx
